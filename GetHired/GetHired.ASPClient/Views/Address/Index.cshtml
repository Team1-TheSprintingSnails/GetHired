@model IEnumerable<GetHired.DTO.AddressModel>

<div class="row">
    <p class="col-md-6">
        @Html.ActionLink("Add new address to company", "Create", new { id = ViewBag.CompanyId }, new { @class = "col-md-8 btn btn-success" })
    </p>
    <p class="col-md-6">
        @Html.ActionLink("Back to Campany's Details", "Details", "Company", new { id = ViewBag.CompanyId }, new { @class = "col-md-8 btn btn-success" })
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StreetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.AddressId}) |
                @Html.ActionLink("Details", "Details", new { id = item.AddressId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AddressId })
            </td>
        </tr>
    }
</table>