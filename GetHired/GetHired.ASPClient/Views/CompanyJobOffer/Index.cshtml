@model IEnumerable<GetHired.DTO.JobOfferModel>

<div class="row">
    <p class="col-md-6">
        @Html.ActionLink("Add new job offer to company", "Create", new { id = ViewBag.CompanyId }, new { @class = "col-md-8 btn btn-success" })
    </p>
    <p class="col-md-6">
        @Html.ActionLink("Back to Campany's Details", "Details", "Company", new { id = ViewBag.CompanyId }, new { @class = "col-md-8 btn btn-success" })
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobOfferRating)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobType)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobCategory)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobOfferRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobCategory)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.JobOfferId }) |
                @Html.ActionLink("Details", "Details", new { id = item.JobOfferId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.JobOfferId })
            </td>
        </tr>
    }

</table>