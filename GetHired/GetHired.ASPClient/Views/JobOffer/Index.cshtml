@model System.Collections.Generic.IEnumerable<GetHired.DTO.JobOfferModel>

<h2>Index</h2>

<p>
    @Html.ActionLink("Export PDF with job offers", "DownloadPDF")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobOfferRating)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobType)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.JobCategory)
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobOfferRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCategory)
        </td>
        <td>
            @Html.ActionLink(
          linkText: "Edit",
          actionName: "Edit",
          controllerName: "CompanyJobOffer",
             routeValues: new { id = item.JobOfferId },
             htmlAttributes: null) |

            @Html.ActionLink(
          linkText: "Details",
          actionName: "Details",
          controllerName: "CompanyJobOffer",
             routeValues: new { id = item.JobOfferId },
             htmlAttributes: null) |

            @Html.ActionLink(
             linkText: "Delete",
             actionName: "Delete",
             controllerName: "CompanyJobOffer",
             routeValues: new { id = item.JobOfferId },
             htmlAttributes: null)
        </td>
    </tr>
    }

</table>